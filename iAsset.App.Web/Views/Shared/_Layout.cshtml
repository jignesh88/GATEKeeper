<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="flightApp">
    <app-header></app-header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularmini")
    @*@Scripts.Render("~/bundles/angularmodules")*@
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/angular-moment.js"></script>
    <script src="~/app/app.js"></script>
    <script src="~/app/modules/flight/flightController.js"></script>
    <script src="~/app/modules/flight/flightService.js"></script>
    <script src="~/app/directives/header_directive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
